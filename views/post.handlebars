<div class="row">
  <div class="col-auto">
    <h2>Welcome {{username}}</h2>
  </div>
</div>

<div class="row mt-4">
  <div class="col-md-6">
    <h3>Create a New Post:</h3>

<form action="/api/User/posts" class="post-form">
      <div class="form-group">
            <label for="/posts">{{postTitle}}</label>
        <input class="form-input" type="text" id="post" name="project-name" />
      </div>
      <div class="form-group">
        <label for="post-content">{{post_content}}</label>
        <label for="username">{{username}}</label>
        <input class="form-input" type="number" id="post-content" name="project-funding" />
      </div>
     
        <button type="submit" class="btn btn-primary">Create</button>
      </div>
    </form>
</div>

<h1 style="text-align: center; font-size: 2rem; font-weight: bold;">Create a New Post</h1>



  <div>
    <label for="/posts">Post Title</label>
    <input type="text" id="postTitle" name="postTitle"></input>
  </div>

  <div>
    <label for="postContent">Post Content</label>
    <textarea id="postContent" name="postContent" cols="50" rows="3"></textarea>
  </div>

  <button type="submit" class="postBtn btn-block">Post</button>

</section>

<script src="./js/post.js"></script>